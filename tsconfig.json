{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*", "src"],
      "assets/*": ["src/assets/*", "src/assets"],
      "config/*": ["src/config/*", "src/config"],
      "hooks/*": ["src/hooks/*"],
      "fallback-ui/*": ["src/fallback-ui/*"],
      "screens/*": ["src/screens/*", "src/screens/"],
      "layout/*": ["src/layout/*", "src/layout/"],
      "component/*": ["src/components/*", "src/component/"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
